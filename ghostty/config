# Ghostty Configuration


# macOS specific
# Makes Option key work like Alt key (for terminal shortcuts like Alt+b/Alt+f)
# instead of generating special characters (⌥+e = é)
macos-option-as-alt = false


# font
font-family = "JetBrains Mono"
window-title-font-family = "JetBrains Mono"
font-feature = -calt
font-feature = -liga
font-feature = -dlig
font-size = 14

# misc
clipboard-paste-protection = false

# window
confirm-close-surface = false
window-save-state = always
window-padding-x = 4
window-padding-y = 4
window-padding-balance = true
window-decoration = auto
split-divider-color = "#ffffff"

